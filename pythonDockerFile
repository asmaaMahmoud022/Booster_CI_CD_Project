FROM python:3.8-slim-buster
WORKDIR /app
COPY requirements.txt requirements.txt
RUN pip3 install -r requirements.txt
COPY . .
USER root
RUN apt-get update -qq && apt-get install -qqy \
    apt-transport-https \
    ca-certificates \
    curl \
    lxc \
    iptables
    
# Install Docker from Docker Inc. repositories.
RUN curl -sSL https://get.docker.com/ | sh

RUN apt-get -yqq update && apt-get -yqq install docker.io 136 && usermod -g docker jenkins
VOLUME /var/run/docker.sock

RUN docker build -f pythonDockerFile . -t asmaa1123/python_v1
RUN docker login -u ${{ secrets.DOCKER_USER }} -p ${{ secrets.DOCKERHUB }}
RUN docker push asmaa1123/python_v1
